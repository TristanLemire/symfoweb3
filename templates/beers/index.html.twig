{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-3">Sidebar</div>
        <div class="col-9">
            <h1>The Beers</h1>
                {% for oneBeer in beers %}
                    <div class="card" style="width: 18rem;">
                            <div class="card-body">
                            <h5 class="card-title"><strong>Name : {{oneBeer.name}}</strong></h5>
                            <p class="card-text">Degree : {{oneBeer.degree}}</p>
                            {% set imagePngPath = 'build/images/' ~ oneBeer.name ~ '.png' %}
                            <img src="{{asset(imagePngPath)}}"/>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}